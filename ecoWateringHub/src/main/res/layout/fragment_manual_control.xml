<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TOOLBAR -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/ew_primary_color"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:src="@drawable/main_app_logo_no_bg"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textAppearance="@style/toolBarTitleStyle"/>
    </androidx.appcompat.widget.Toolbar>

    <!-- FRAGMENT -->
    <ScrollView
        android:id="@+id/manualControlFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- INFO CARD -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/infoCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_square_shape"
                android:elevation="1dp"
                android:scaleX="0.85"
                android:scaleY="0.85"
                app:layout_constraintTop_toTopOf="parent">

                <!-- WEATHER CARD -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/weatherStateCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    app:layout_constraintWidth_percent="0.8"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/weatherIconImageViewContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_square_shape"
                        android:backgroundTint="@color/ew_primary_color_50"
                        android:scaleX="0.85"
                        android:scaleY="0.85"
                        android:elevation="4dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/weatherStateTextViewContainer">
                        <ImageView
                            android:id="@+id/weatherIconImageView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="25dp"
                            android:scaleX="2.5"
                            android:scaleY="2.5"
                            app:layout_constraintDimensionRatio="1:1"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/weatherStateTextViewContainer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/weatherIconImageViewContainer"
                        app:layout_constraintRight_toRightOf="parent">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:orientation="horizontal"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent">
                            <!-- DEGREES NUMBER -->
                            <TextView
                                android:id="@+id/weatherStateFirstDegreesTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="20"
                                android:layout_marginEnd="2dp"
                                android:textSize="40sp"
                                android:textStyle="bold"/>
                            <!-- MEASUREMENT UNIT -->
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/temperature_celsius"
                                android:textSize="16sp"
                                android:layout_marginTop="10dp"/>
                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <!-- ADDRESS OF EWH -->
                    <TextView
                        android:id="@+id/weatherStateAddressTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:text="sdjksa nakla mn knasknck asnkclnaklsnckasn cknsaklnakslnkalsncklnasklncklansnc"
                        app:layout_constraintTop_toBottomOf="@+id/weatherStateTextViewContainer"
                        app:layout_constraintLeft_toRightOf="@+id/weatherIconImageViewContainer"
                        app:layout_constraintRight_toRightOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- RELATIVE HUMIDITY/LIGHT CARD -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/relativeHumidityLightCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleY="0.9"
                    android:scaleX="0.9"
                    app:layout_constraintTop_toBottomOf="@+id/weatherStateCard">
                    <!-- RELATIVE HUMIDITY CARD -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_square_shape"
                        android:scaleX="0.9"
                        android:scaleY="0.9"
                        android:elevation="1dp"
                        app:layout_constraintWidth_percent="0.5"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent">
                        <TextView
                            android:id="@+id/relativeHumidityPercentTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_square_shape"
                            android:backgroundTint="@color/ew_primary_color_50"
                            android:elevation="4dp"
                            android:scaleY="0.95"
                            android:scaleX="0.95"
                            android:minWidth="?attr/actionBarSize"
                            android:layout_marginStart="5dp"
                            android:paddingStart="15dp"
                            android:paddingEnd="15dp"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"/>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toRightOf="@+id/relativeHumidityPercentTextView"
                            app:layout_constraintRight_toRightOf="parent">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/relative_humidity_percent_label"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:textSize="18sp"
                                android:textAlignment="center"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <!-- LIGHT CARD -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/rounded_square_shape"
                        android:scaleX="0.9"
                        android:scaleY="0.9"
                        android:elevation="1dp"
                        app:layout_constraintWidth_percent="0.5"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent">
                        <TextView
                            android:id="@+id/lightIndexTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_square_shape"
                            android:backgroundTint="@color/ew_primary_color_50"
                            android:elevation="4dp"
                            android:scaleY="0.95"
                            android:scaleX="0.95"
                            android:minWidth="?attr/actionBarSize"
                            android:layout_marginStart="5dp"
                            android:paddingStart="15dp"
                            android:paddingEnd="15dp"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"/>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toRightOf="@+id/lightIndexTextView"
                            app:layout_constraintRight_toRightOf="parent">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/light_uv_index_label"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:textSize="18sp"
                                android:textAlignment="center"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- REMOTE DEVICE CONNECTED CARD -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/remoteDevicesConnectedCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_square_shape"
                android:scaleX="0.85"
                android:scaleY="0.85"
                android:elevation="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:layout_constraintTop_toBottomOf="@+id/infoCard">
                <TextView
                    android:id="@+id/remoteDeviceConnectedNumberTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="?attr/actionBarSize"
                    android:layout_marginStart="5dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:background="@drawable/rounded_square_shape"
                    android:backgroundTint="@color/ew_primary_color_50"
                    android:scaleY="0.95"
                    android:scaleX="0.95"
                    android:elevation="2dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <TextView
                    android:id="@+id/remoteDeviceConnectedTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textSize="18sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/remoteDeviceConnectedNumberTextView"
                    app:layout_constraintRight_toLeftOf="@+id/goToRemoteDevicesConnectedContainer"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/goToRemoteDevicesConnectedContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/next_icon"
                        android:backgroundTint="@color/black_white_85"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- ENABLE IRRIGATION SYSTEM CARD -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/enableIrrigationSystemCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_square_shape"
                android:scaleX="0.85"
                android:scaleY="0.85"
                android:elevation="1dp"
                app:layout_constraintTop_toBottomOf="@+id/remoteDevicesConnectedCard">
                <LinearLayout
                    android:id="@+id/titleIrrigationSystemCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_square_shape"
                    android:backgroundTint="@color/ew_primary_color_50"
                    android:elevation="2dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toTopOf="parent">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:scaleY="1.25"
                        android:scaleX="1.25"
                        android:background="@drawable/irrigation_system_icon"
                        android:backgroundTint="@color/white"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/irrigation_system_label"
                        android:textAlignment="center"
                        android:textSize="24sp"
                        android:textColor="@color/white"/>
                </LinearLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/irrigationSystemStateTextViewContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/titleIrrigationSystemCard"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">
                    <TextView
                        android:id="@+id/irrigationSystemStateTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:text="@string/state_label"
                        android:textSize="18sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/irrigationSystemValueStateTextView"/>
                    <TextView
                        android:id="@+id/irrigationSystemValueStateTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="@string/off_value"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/irrigationSystemStateTextView"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/irrigationSystemStateSwitchCompat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:scaleY="2"
                    android:scaleX="2"
                    app:layout_constraintTop_toBottomOf="@+id/irrigationSystemStateTextViewContainer"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- CONFIGURATION CARD -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/configurationCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_square_shape"
                android:scaleX="0.85"
                android:scaleY="0.85"
                android:elevation="8dp"
                android:padding="10dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:layout_constraintTop_toBottomOf="@+id/enableIrrigationSystemCard"
                app:layout_constraintBottom_toBottomOf="parent">
                <!-- TITLE CARD -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/titleConfigurationCards"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_square_shape"
                    android:elevation="2dp"
                    android:backgroundTint="@color/ew_primary_color_50"
                    app:layout_constraintTop_toTopOf="parent">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/setting_icon"
                            android:backgroundTint="@color/white"
                            app:layout_constraintDimensionRatio="1:1"
                            android:scaleY="1.25"
                            android:scaleX="1.25"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/configuration_label"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textAlignment="center"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/next_icon"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <!-- IS NOT AUTOMATED CARD -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/isNotAutomatedContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rounded_square_shape"
                    android:elevation="1dp"
                    android:scaleX="0.85"
                    android:scaleY="0.85"
                    app:layout_constraintTop_toBottomOf="@+id/titleConfigurationCards">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintWidth_percent="0.7"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent">
                        <TextView
                            android:id="@+id/isNotAutomatedTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:textAlignment="center"
                            android:text="@string/configuration_not_automated"
                            android:textSize="24sp"
                            android:textColor="@color/ew_secondary_color_30"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toTopOf="@+id/isNotAutomatedSuggestTextView"/>
                        <TextView
                            android:id="@+id/isNotAutomatedSuggestTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:textAlignment="center"
                            android:text="@string/configuration_not_automated_message"
                            android:textSize="20sp"
                            app:layout_constraintTop_toBottomOf="@+id/isNotAutomatedTextView"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/irrigationSystemAutomateControlSwitchCompatContainer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintWidth_percent="0.3"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent">
                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/irrigationSystemAutomateControlSwitchCompat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleY="2"
                            android:scaleX="2"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <!-- REAL TIME SENSORS WEATHER REFRESH -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/realTimeSensorsWeatherRefreshCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_square_shape"
                    android:scaleY="0.85"
                    android:scaleX="0.85"
                    android:elevation="1dp"
                    app:layout_constraintTop_toBottomOf="@+id/isNotAutomatedContainer">
                    <TextView
                        android:id="@+id/realTimeSensorsWeatherRefreshTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/sensors_weather_background_refresh"
                        android:textSize="24sp"
                        android:textAlignment="center"
                        app:layout_constraintWidth_percent="0.7"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"/>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/realTimeSensorsWeatherRefreshSwitchContainer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintWidth_percent="0.3"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent">
                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/realTimeSensorsWeatherRefreshSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:scaleY="2"
                            android:scaleX="2"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <!-- SENSORS CONFIGURATION STATE CARD -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/sensorsConfigurationStateCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_square_shape"
                    android:backgroundTint="@color/ew_secondary_color_30"
                    android:scaleX="0.85"
                    android:scaleY="0.85"
                    android:elevation="1dp"
                    app:layout_constraintTop_toBottomOf="@+id/realTimeSensorsWeatherRefreshCard">
                    <TextView
                        android:id="@+id/sensorsConfigurationStateTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="20dp"
                        android:minHeight="40dp"
                        android:text="@string/sensors_configuration_not_complete"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textAlignment="center"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/sensorsConfigurationStateImageViewContainer"/>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/sensorsConfigurationStateImageViewContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent">
                        <ImageView
                            android:id="@+id/sensorsConfigurationStateImageView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/error_icon"
                            android:backgroundTint="@color/white"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <!-- INFO NO SENSOR CONFIGURED -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:layout_constraintWidth_percent="0.9"
                    app:layout_constraintTop_toBottomOf="@+id/sensorsConfigurationStateCard"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/infoNoSensorConfiguredImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/info_icon"
                            android:backgroundTint="@color/black_white_50"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="@string/sensor_not_configured_info"
                        android:textColor="@color/black_white_50"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/infoNoSensorConfiguredImageView"
                        app:layout_constraintRight_toRightOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- LOADING FRAGMENT -->
    <include
        android:id="@+id/includeLoadingFragment"
        layout="@layout/fragment_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>