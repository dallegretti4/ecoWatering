<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TOOLBAR -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ew_primary_color"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- FRAGMENT -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/manageRemoteEWDevicesConnectedFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/ew_primary_color_98"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent">
        <!-- TITLE -->
        <TextView
            android:id="@+id/remoteDevicesConnectedTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="@string/remove_remote_device_title_empty_case"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"/>
        <!-- REMOTE DEVICES CONNECTED LIST -->
        <ListView
            android:id="@+id/remoteDevicesConnectedListView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="8dp"
            app:layout_constraintTop_toBottomOf="@+id/remoteDevicesConnectedTextView"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <!-- IF 0 REMOTE DEVICE CONNECTED -->
        <TextView
            android:id="@+id/noRemoteDevicesConnectedCaseTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:visibility="gone"
            android:padding="20dp"
            android:text="@string/remote_devices_connected_case"
            android:textSize="24sp"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/remoteDevicesConnectedTextView"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- LOADING FRAGMENT -->
    <include
        android:id="@+id/includeLoadingFragment"
        layout="@layout/fragment_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>