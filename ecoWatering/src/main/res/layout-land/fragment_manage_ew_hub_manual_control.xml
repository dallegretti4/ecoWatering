<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TOOLBAR -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/ewd_primary_color"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/hubNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textAppearance="@style/toolBarTitleStyle"/>
    </androidx.appcompat.widget.Toolbar>

    <!-- FRAGMENT -->
    <!-- LEFT SCROLL VIEW -->
    <ScrollView
        android:id="@+id/mainFrameLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintTop_toBottomOf="@+id/toolBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!-- INFO CARD -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/infoCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_square_shape"
                android:elevation="1dp"
                android:scaleY="0.85"
                android:scaleX="0.85"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent">
                <!-- WEATHER CARD -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/weatherStateCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintWidth_percent="0.8"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/weatherIconImageViewContainer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:background="@drawable/rounded_square_shape"
                        android:backgroundTint="@color/ewd_primary_color_50"
                        android:scaleX="0.85"
                        android:scaleY="0.85"
                        android:elevation="2dp"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/weatherStateTextViewContainer">
                        <ImageView
                            android:id="@+id/weatherIconImageView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="25dp"
                            android:scaleX="2"
                            android:scaleY="2"
                            app:layout_constraintDimensionRatio="1:1"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <LinearLayout
                        android:id="@+id/weatherStateTextViewContainer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="5dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/weatherStateAddressTextView"
                        app:layout_constraintLeft_toRightOf="@+id/weatherIconImageViewContainer"
                        app:layout_constraintRight_toRightOf="parent">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/weatherStateFirstDegreesTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="5dp"
                                android:text="20"
                                android:textSize="40sp"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/temperature_celsius"
                                android:textSize="20sp"
                                android:layout_marginTop="-15dp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/weatherStateAddressTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:text="sdabhasbda asdhvasbvdjhasbdab asbjsbx jbjkasnfjnajknxaknsknldkns"
                        app:layout_constraintTop_toBottomOf="@+id/weatherStateTextViewContainer"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/weatherIconImageViewContainer"
                        app:layout_constraintRight_toRightOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- RELATIVE HUMIDITY/LIGHT CARD -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/relativeHumidityLightCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:scaleX="0.9"
                    android:scaleY="0.9"
                    app:layout_constraintTop_toBottomOf="@+id/weatherStateCard"
                    app:layout_constraintLeft_toLeftOf="parent">
                    <!-- RELATIVE HUMIDITY CARD -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_square_shape"
                        android:elevation="1dp"
                        android:scaleX="0.9"
                        android:scaleY="0.9"
                        app:layout_constraintWidth_percent="0.5"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent">
                        <TextView
                            android:id="@+id/relativeHumidityPercentTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_square_shape"
                            android:backgroundTint="@color/ewd_primary_color_50"
                            android:elevation="2dp"
                            android:scaleY="0.95"
                            android:scaleX="0.95"
                            android:minWidth="?attr/actionBarSize"
                            android:layout_marginStart="5dp"
                            android:paddingStart="15dp"
                            android:paddingEnd="15dp"
                            android:text="99"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"/>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toRightOf="@+id/relativeHumidityPercentTextView"
                            app:layout_constraintRight_toRightOf="parent">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/relative_humidity_percent_label"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:textAlignment="center"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <!-- LIGHT CARD -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/rounded_square_shape"
                        android:elevation="1dp"
                        android:scaleX="0.9"
                        android:scaleY="0.9"
                        app:layout_constraintWidth_percent="0.5"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent">
                        <TextView
                            android:id="@+id/lightIndexTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_square_shape"
                            android:backgroundTint="@color/ewd_primary_color_50"
                            android:elevation="2dp"
                            android:scaleY="0.95"
                            android:scaleX="0.95"
                            android:minWidth="?attr/actionBarSize"
                            android:layout_marginStart="5dp"
                            android:paddingStart="15dp"
                            android:paddingEnd="15dp"
                            android:text="99"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"/>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toRightOf="@+id/lightIndexTextView"
                            app:layout_constraintRight_toRightOf="parent">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/light_uv_index_label"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:textAlignment="center"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- REMOTE DEVICE CONNECTED CARD -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/remoteDevicesConnectedCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_square_shape"
                android:scaleX="0.85"
                android:scaleY="0.85"
                android:elevation="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:layout_constraintTop_toBottomOf="@+id/infoCard"
                app:layout_constraintLeft_toLeftOf="parent">
                <TextView
                    android:id="@+id/remoteDeviceConnectedNumberTextView"
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@drawable/rounded_square_shape"
                    android:backgroundTint="@color/ewd_primary_color_50"
                    android:scaleY="0.95"
                    android:scaleX="0.95"
                    android:elevation="2dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <TextView
                    android:id="@+id/remoteDeviceConnectedTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textSize="18sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/remoteDeviceConnectedNumberTextView"
                    app:layout_constraintRight_toLeftOf="@+id/goToRemoteDevicesConnectedCardImageViewContainer"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/goToRemoteDevicesConnectedCardImageViewContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/next_icon"
                        android:backgroundTint="@color/black_white_85"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


    <!-- RIGHT SCROLL VIEW -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintTop_toBottomOf="@+id/toolBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- IRRIGATION SYSTEM CARD -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/setStateContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_square_shape"
                android:scaleX="0.85"
                android:scaleY="0.85"
                android:elevation="1dp"
                android:padding="10dp"
                app:layout_constraintTop_toTopOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/irrigationSystemTitleCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_square_shape"
                    android:backgroundTint="@color/ewd_primary_color_50"
                    android:elevation="2dp"
                    app:layout_constraintTop_toTopOf="parent">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:scaleY="1.25"
                        android:scaleX="1.25"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/irrigation_system_icon"
                            android:backgroundTint="@color/white"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/irrigation_system_label"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/irrigationSystemStateTextViewContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/irrigationSystemTitleCard"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">
                    <TextView
                        android:id="@+id/irrigationSystemStateTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:text="@string/state_label"
                        android:textSize="18sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/irrigationSystemValueStateTextView"/>
                    <TextView
                        android:id="@+id/irrigationSystemValueStateTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="@string/off_value"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/irrigationSystemStateTextView"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/irrigationSystemStateSwitchCompat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleY="2"
                    android:scaleX="2"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/irrigationSystemStateTextViewContainer"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <!-- CONFIGURATION CARD -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/configurationCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_square_shape"
                android:elevation="1dp"
                android:scaleX="0.85"
                android:scaleY="0.85"
                app:layout_constraintTop_toBottomOf="@+id/setStateContainer">
                <!-- CONFIGURATION TITLE CARD -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/configurationTitleCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_square_shape"
                    android:backgroundTint="@color/ewd_primary_color_50"
                    android:elevation="2dp"
                    android:scaleY="0.85"
                    android:scaleX="0.95"
                    app:layout_constraintTop_toTopOf="parent">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:scaleY="1.25"
                        android:scaleX="1.25"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/setting_icon"
                            android:backgroundTint="@color/white"
                            app:layout_constraintDimensionRatio="1:1"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <TextView
                        android:id="@+id/configurationTitleTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="@string/configuration_label"
                        android:textSize="24sp"
                        android:textColor="@color/white"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/isNotAutomatedContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/rounded_square_shape"
                    android:elevation="1dp"
                    android:scaleX="0.85"
                    android:scaleY="0.85"
                    android:padding="15dp"
                    app:layout_constraintTop_toBottomOf="@+id/configurationTitleCard">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/textViewInnerContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/irrigationSystemAutomateControlSwitchCompat">
                        <TextView
                            android:id="@+id/isNotAutomatedTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/configuration_not_automated"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:textColor="@color/ew_secondary_color_30"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"/>
                        <TextView
                            android:id="@+id/isNotAutomatedSuggestTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/configuration_not_automated_message"
                            android:textSize="20sp"
                            app:layout_constraintTop_toBottomOf="@+id/isNotAutomatedTextView"
                            app:layout_constraintLeft_toLeftOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/irrigationSystemAutomateControlSwitchCompat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleY="2"
                        android:scaleX="2"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/textViewInnerContainer"
                        app:layout_constraintRight_toRightOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/sensorConfigurationCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/isNotAutomatedContainer">
                    <!-- SENSOR ITEM -->
                    <LinearLayout
                        android:id="@+id/ambientTemperatureSensorItem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/rounded_square_shape"
                        android:scaleX="0.85"
                        android:scaleY="0.85"
                        android:elevation="1dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/lightSensorItem">
                        <TextView
                            android:id="@+id/ambientTemperatureSensorTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:text="@string/sensor_ambient_temperature"
                            android:textSize="24sp"
                            android:layout_weight="3"/>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center">
                            <ImageView
                                android:id="@+id/ambientTemperatureSensorStateImageView"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/close_circle_icon"
                                android:backgroundTint="@color/ew_secondary_color_30"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintDimensionRatio="1:1"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>
                    <!-- SECOND SENSOR ITEM -->
                    <LinearLayout
                        android:id="@+id/lightSensorItem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/rounded_square_shape"
                        android:scaleX="0.85"
                        android:scaleY="0.85"
                        android:elevation="1dp"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@+id/ambientTemperatureSensorItem"
                        app:layout_constraintBottom_toTopOf="@+id/relativeHumiditySensorItem">
                        <TextView
                            android:id="@+id/lightSensorTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:text="@string/sensor_light"
                            android:textSize="24sp"
                            android:layout_weight="3"/>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center">
                            <ImageView
                                android:id="@+id/lightSensorStateImageView"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/close_circle_icon"
                                android:backgroundTint="@color/ew_secondary_color_30"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintDimensionRatio="1:1"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>
                    <!-- THIRD SENSOR ITEM -->
                    <LinearLayout
                        android:id="@+id/relativeHumiditySensorItem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/rounded_square_shape"
                        android:scaleX="0.85"
                        android:scaleY="0.85"
                        android:elevation="1dp"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@+id/lightSensorItem"
                        app:layout_constraintBottom_toBottomOf="parent">
                        <TextView
                            android:id="@+id/relativeHumiditySensorTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:text="@string/sensor_relative_humidity"
                            android:textSize="24sp"
                            android:layout_weight="3"/>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center">
                            <ImageView
                                android:id="@+id/relativeHumiditySensorStateImageView"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/close_circle_icon"
                                android:backgroundTint="@color/ew_secondary_color_30"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintDimensionRatio="1:1"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- LOADING FRAGMENT -->
    <include
        android:id="@+id/includeLoadingFragment"
        layout="@layout/fragment_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>