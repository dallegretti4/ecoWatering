<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TOOLBAR -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/ewd_primary_color"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- FRAGMENT -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/toolBar"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- IS NOT AUTOMATED CARD -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/isNotAutomatedContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rounded_square_shape"
                    android:orientation="horizontal"
                    android:elevation="4dp"
                    android:scaleX="0.85"
                    android:scaleY="0.85"
                    android:padding="10dp"
                    app:layout_constraintTop_toTopOf="parent">
                    <LinearLayout
                        android:id="@+id/textViewContainer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:orientation="vertical"
                        android:layout_gravity="center">
                        <TextView
                            android:id="@+id/isNotAutomatedTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:text="@string/configuration_not_automated"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/ew_secondary_color_30"/>
                        <TextView
                            android:id="@+id/isNotAutomatedSuggestTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:text="@string/configuration_not_automated_message"
                            android:textSize="20sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/switchCompatContainer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/irrigationSystemAutomateControlSwitchCompat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="15dp"
                            android:scaleY="2"
                            android:scaleX="2"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- SENSOR CARD -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/sensorsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_square_shape"
                android:scaleX="0.85"
                android:scaleY="0.85"
                android:elevation="8dp"
                app:layout_constraintTop_toBottomOf="@+id/isNotAutomatedContainer">
                <!-- TITLE CARD -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/titleSensorsCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_square_shape"
                    android:backgroundTint="@color/ewd_primary_color_50"
                    android:elevation="4dp"
                    app:layout_constraintTop_toTopOf="parent">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:scaleY="1.25"
                        android:scaleX="1.25"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/sensors_icon"
                            android:backgroundTint="@color/white"
                            app:layout_constraintDimensionRatio="1:1"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sensors_label"
                        android:textSize="24sp"
                        android:textColor="@color/white"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- AMBIENT TEMPERATURE SENSOR CARD -->
                <LinearLayout
                    android:id="@+id/ambientTemperatureSensorCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_square_shape"
                    android:scaleX="0.95"
                    android:scaleY="0.95"
                    android:elevation="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/titleSensorsCard">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:text="@string/sensor_ambient_temperature"
                            android:textSize="24sp"
                            android:textAlignment="center"/>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:scaleY="1.5"
                            android:scaleX="1.5"
                            android:layout_gravity="center">
                            <ImageView
                                android:id="@+id/ambientTemperatureSensorStateImageView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/close_circle_icon"
                                android:backgroundTint="@color/ew_secondary_color_30"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- LIGHT SENSOR CARD -->
                <LinearLayout
                    android:id="@+id/lightSensorCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_square_shape"
                    android:scaleX="0.95"
                    android:scaleY="0.95"
                    android:elevation="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/ambientTemperatureSensorCard">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:text="@string/sensor_light"
                            android:textSize="24sp"
                            android:textAlignment="center"/>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:scaleY="1.5"
                            android:scaleX="1.5"
                            android:layout_gravity="center">
                            <ImageView
                                android:id="@+id/lightSensorStateImageView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/close_circle_icon"
                                android:backgroundTint="@color/ew_secondary_color_30"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- RELATIVE  SENSOR CARD -->
                <LinearLayout
                    android:id="@+id/relativeHumiditySensorCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_square_shape"
                    android:scaleX="0.95"
                    android:scaleY="0.95"
                    android:elevation="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/lightSensorCard">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:text="@string/sensor_relative_humidity"
                            android:textSize="24sp"
                            android:textAlignment="center"/>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:scaleY="1.5"
                            android:scaleX="1.5"
                            android:layout_gravity="center">
                            <ImageView
                                android:id="@+id/relativeHumiditySensorStateImageView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/close_circle_icon"
                                android:backgroundTint="@color/ew_secondary_color_30"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>