<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TOOLBAR -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/toolbarLogoImageView"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:src="@drawable/main_app_logo_no_bg_hub"/>
        <TextView
            android:id="@+id/toolbarTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/eco_watering_hub_app_name"
            android:textAppearance="@style/toolBarTitleStyle"/>
    </androidx.appcompat.widget.Toolbar>

    <!-- FRAGMENT -->
    <ScrollView
        android:id="@+id/manageHubManualControlFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- WEATHER INFO CARD -->
            <include
                android:id="@+id/weatherInfoCard"
                layout="@layout/weather_info_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"/>

            <!-- CONNECTED REMOTE DEVICE CARD -->
            <include
                android:id="@+id/connectedRemoteDevicesCard"
                layout="@layout/connected_remote_devices_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/weatherInfoCard"/>

            <!-- IRRIGATION SYSTEM CARD -->
            <include
                android:id="@+id/irrigationSystemCard"
                layout="@layout/irrigation_system_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/connectedRemoteDevicesCard"/>

            <!-- CONFIGURATION CARD -->

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/configurationCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_square_shape"
                android:scaleX="0.85"
                android:scaleY="0.85"
                android:elevation="1dp"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@+id/irrigationSystemCard">
                <!-- TITLE CARD -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/titleConfigurationCards"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_square_shape"
                    android:elevation="2dp"
                    app:layout_constraintTop_toTopOf="parent">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/setting_icon"
                            android:backgroundTint="@color/black_white_100"
                            app:layout_constraintDimensionRatio="1:1"
                            android:scaleY="1.25"
                            android:scaleX="1.25"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/configuration_label"
                        android:textColor="@color/black_white_100"
                        android:textSize="24sp"
                        android:textAlignment="center"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <!-- IS NOT AUTOMATED CARD -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/isNotAutomatedContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rounded_square_shape"
                    android:elevation="1dp"
                    android:scaleX="0.95"
                    android:scaleY="0.95"
                    app:layout_constraintTop_toBottomOf="@+id/titleConfigurationCards">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintWidth_percent="0.7"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent">
                        <TextView
                            android:id="@+id/isNotAutomatedTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:textAlignment="center"
                            android:text="@string/configuration_not_automated"
                            android:textSize="24sp"
                            android:textColor="@color/ew_secondary_color_30"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toTopOf="@+id/isNotAutomatedSuggestTextView"/>
                        <TextView
                            android:id="@+id/isNotAutomatedSuggestTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:textAlignment="center"
                            android:text="@string/configuration_not_automated_message"
                            android:textSize="20sp"
                            app:layout_constraintTop_toBottomOf="@+id/isNotAutomatedTextView"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/irrigationSystemAutomateControlSwitchCompatContainer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintWidth_percent="0.3"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent">
                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/irrigationSystemAutomateControlSwitchCompat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleY="2"
                            android:scaleX="2"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <!-- BACKGROUND REFRESH -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/realTimeSensorsWeatherRefreshCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_square_shape"
                    android:scaleY="0.95"
                    android:scaleX="0.95"
                    android:elevation="1dp"
                    app:layout_constraintTop_toBottomOf="@+id/isNotAutomatedContainer">
                    <TextView
                        android:id="@+id/realTimeSensorsWeatherRefreshTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/background_refresh_label"
                        android:textSize="24sp"
                        android:textAlignment="center"
                        app:layout_constraintWidth_percent="0.7"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"/>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/realTimeSensorsWeatherRefreshSwitchContainer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintWidth_percent="0.3"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent">
                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/backgroundRefreshSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:scaleY="2"
                            android:scaleX="2"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <!-- SENSORS CONFIGURATION STATE CARD -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/sensorsConfigurationStateCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:layout_constraintWidth_percent="0.97"
                    app:layout_constraintTop_toBottomOf="@+id/realTimeSensorsWeatherRefreshCard"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">
                    <!-- AMBIENT TEMPERATURE SENSOR CARD -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/ambientTemperatureSensorCard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/rounded_square_shape"
                        android:scaleX="0.85"
                        android:scaleY="0.85"
                        android:elevation="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:layout_constraintWidth_percent="0.33"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/ambientTemperatureSensorLeftLayout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintWidth_percent="0.9"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent">
                            <ImageView
                                android:id="@+id/ambientTemperatureSensorNotConfiguredNotification"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="10dp"
                                android:background="@drawable/error_icon"
                                android:backgroundTint="@color/ew_secondary_color_30"
                                android:elevation="2dp"
                                android:visibility="gone"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintRight_toRightOf="parent"/>
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/ambientTemperatureSensorImageViewContainer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/rounded_square_shape"
                                android:scaleX="0.95"
                                android:scaleY="0.95"
                                android:elevation="1dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:minWidth="36dp"
                                    android:minHeight="36dp"
                                    android:background="@drawable/sensor_ambient_temperature_icon"
                                    android:backgroundTint="@color/black_white_100"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintRight_toRightOf="parent"/>
                            </androidx.constraintlayout.widget.ConstraintLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="@string/sensor_ambient_temperature"
                                android:textAlignment="center"
                                app:layout_constraintTop_toBottomOf="@+id/ambientTemperatureSensorImageViewContainer"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="0dp"
                            android:background="@color/black_white_90"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toRightOf="@+id/ambientTemperatureSensorLeftLayout"/>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintWidth_percent="0.1"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:background="@drawable/next_icon"
                                android:backgroundTint="@color/black_white_70"
                                app:layout_constraintDimensionRatio="1:1"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <!-- LIGHT SENSOR CARD -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/lightSensorCard"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/rounded_square_shape"
                        android:scaleX="0.85"
                        android:scaleY="0.85"
                        android:elevation="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:layout_constraintWidth_percent="0.33"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/ambientTemperatureSensorCard"
                        app:layout_constraintRight_toLeftOf="@+id/relativeHumiditySensorCard">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/lightSensorLeftLayout"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintWidth_percent="0.9"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent">
                            <ImageView
                                android:id="@+id/lightSensorNotConfiguredNotification"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="10dp"
                                android:background="@drawable/error_icon"
                                android:backgroundTint="@color/ew_secondary_color_30"
                                android:elevation="2dp"
                                android:visibility="gone"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintRight_toRightOf="parent"/>
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/lightSensorImageViewContainer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/rounded_square_shape"
                                android:scaleX="0.95"
                                android:scaleY="0.95"
                                android:elevation="1dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:minWidth="36dp"
                                    android:minHeight="36dp"
                                    android:background="@drawable/sensor_light_icon"
                                    android:backgroundTint="@color/black_white_100"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintRight_toRightOf="parent"/>
                            </androidx.constraintlayout.widget.ConstraintLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sensor_light"
                                android:textAlignment="center"
                                app:layout_constraintTop_toBottomOf="@+id/lightSensorImageViewContainer"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="0dp"
                            android:background="@color/black_white_90"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toRightOf="@+id/lightSensorLeftLayout"/>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintWidth_percent="0.1"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:background="@drawable/next_icon"
                                android:backgroundTint="@color/black_white_70"
                                app:layout_constraintDimensionRatio="1:1"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <!-- RELATIVE HUMIDITY SENSOR CARD -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/relativeHumiditySensorCard"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/rounded_square_shape"
                        android:scaleX="0.85"
                        android:scaleY="0.85"
                        android:elevation="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:layout_constraintWidth_percent="0.33"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/lightSensorCard"
                        app:layout_constraintRight_toRightOf="parent">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/relativeHumiditySensorLeftLayout"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintWidth_percent="0.9"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent">
                            <ImageView
                                android:id="@+id/relativeHumiditySensorNotConfiguredNotification"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="10dp"
                                android:background="@drawable/error_icon"
                                android:backgroundTint="@color/ew_secondary_color_30"
                                android:elevation="2dp"
                                android:visibility="gone"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintRight_toRightOf="parent"/>
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/relativeHumiditySensorImageViewContainer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/rounded_square_shape"
                                android:scaleX="0.95"
                                android:scaleY="0.95"
                                android:elevation="1dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:minWidth="36dp"
                                    android:minHeight="36dp"
                                    android:background="@drawable/sensor_relative_humidity_icon"
                                    android:backgroundTint="@color/black_white_100"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintRight_toRightOf="parent"/>
                            </androidx.constraintlayout.widget.ConstraintLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="@string/sensor_relative_humidity"
                                android:textAlignment="center"
                                app:layout_constraintTop_toBottomOf="@+id/relativeHumiditySensorImageViewContainer"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="0dp"
                            android:background="@color/black_white_90"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toRightOf="@+id/relativeHumiditySensorLeftLayout"/>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintWidth_percent="0.1"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:background="@drawable/next_icon"
                                android:backgroundTint="@color/black_white_70"
                                app:layout_constraintDimensionRatio="1:1"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <!-- INFO NO SENSOR CONFIGURED -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/sensorInfoContainer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:layout_constraintWidth_percent="0.9"
                    app:layout_constraintTop_toBottomOf="@+id/sensorsConfigurationStateCard"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/infoNoSensorConfiguredImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/info_icon"
                            android:backgroundTint="@color/black_white_50"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="@string/sensor_not_configured_info"
                        android:textColor="@color/black_white_50"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/infoNoSensorConfiguredImageView"
                        app:layout_constraintRight_toRightOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- LOADING FRAGMENT -->
    <include
        android:id="@+id/includeLoadingFragment"
        layout="@layout/fragment_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>