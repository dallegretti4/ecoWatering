<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scaleX="1.125"
    android:scaleY="1.125">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="400dp"
        android:background="@drawable/rounded_square_shape"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:elevation="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <!-- DATE CARD -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/dateContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_square_shape"
            android:elevation="1dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <TextView
                android:id="@+id/dateTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="24sp"
                android:textAlignment="center"
                android:textColor="@color/black_white_100"
                app:layout_constraintTop_toTopOf="parent"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:background="@drawable/calendar_icon"
                android:backgroundTint="@color/black_white_100"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintTop_toTopOf="@+id/dateTextView"
                app:layout_constraintBottom_toBottomOf="@+id/dateTextView"
                app:layout_constraintLeft_toLeftOf="@+id/dateTextView"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <include
            android:id="@+id/weatherInfoCard"
            layout="@layout/weather_info_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/dateContainer"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <!-- IRRIGATION MINUTES PLANNED CARD -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/irrigationMinutesPlanContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_square_shape"
            android:scaleX="0.95"
            android:scaleY="0.95"
            android:elevation="1dp"
            app:layout_constraintTop_toBottomOf="@+id/weatherInfoCard"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <TextView
                android:id="@+id/irrigationMinutesPlanTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:background="@drawable/rounded_square_shape"
                android:backgroundTint="@color/ew_secondary_color"
                android:scaleX="0.85"
                android:scaleY="0.85"
                android:elevation="1dp"
                android:textSize="24sp"
                android:textColor="@color/black_white_100"
                android:textAlignment="center"
                android:textStyle="bold"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <TextView
                android:id="@+id/irrigationMinutesPlanLabelTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:textSize="20sp"
                android:textAlignment="center"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/irrigationMinutesPlanTextView"
                app:layout_constraintRight_toRightOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>