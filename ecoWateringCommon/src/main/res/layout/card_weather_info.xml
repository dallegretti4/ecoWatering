<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_square_shape"
    android:elevation="1dp"
    android:scaleX="0.85"
    android:scaleY="0.85"
    app:layout_constraintTop_toTopOf="parent">
    <!-- WEATHER CARD -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/weatherStateCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/weatherIconImageViewContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_square_shape"
            android:scaleX="0.85"
            android:scaleY="0.85"
            android:elevation="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/weatherStateTextViewContainer">
            <ImageView
                android:id="@+id/weatherIconImageView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:scaleX="2.5"
                android:scaleY="2.5"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/weatherStateTextViewContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/weatherIconImageViewContainer"
            app:layout_constraintRight_toRightOf="parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent">
                <!-- DEGREES NUMBER -->
                <TextView
                    android:id="@+id/weatherStateFirstDegreesTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="2dp"
                    android:textSize="40sp"
                    android:textStyle="bold"/>
                <!-- MEASUREMENT UNIT -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/temperature_celsius"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <!-- ADDRESS OF EWH -->
        <TextView
            android:id="@+id/weatherStateAddressTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toBottomOf="@+id/weatherStateTextViewContainer"
            app:layout_constraintLeft_toRightOf="@+id/weatherIconImageViewContainer"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- RELATIVE HUMIDITY/LIGHT CARD -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeHumidityLightCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scaleY="0.9"
        android:scaleX="0.9"
        app:layout_constraintTop_toBottomOf="@+id/weatherStateCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <!-- RELATIVE HUMIDITY CARD -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_square_shape"
            android:scaleX="0.9"
            android:scaleY="0.9"
            android:elevation="1dp"
            app:layout_constraintWidth_percent="0.5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">
            <TextView
                android:id="@+id/relativeHumidityPercentTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_square_shape"
                android:elevation="4dp"
                android:scaleY="0.95"
                android:scaleX="0.95"
                android:minWidth="?attr/actionBarSize"
                android:layout_marginStart="5dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black_white_100"
                android:textAlignment="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/relativeHumidityPercentTextView"
                app:layout_constraintRight_toRightOf="parent">
                <TextView
                    android:id="@+id/relativeHumidityLabelTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/relative_humidity_percent_label"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <!-- LIGHT CARD -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/rounded_square_shape"
            android:scaleX="0.9"
            android:scaleY="0.9"
            android:elevation="1dp"
            app:layout_constraintWidth_percent="0.5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <TextView
                android:id="@+id/lightIndexTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="?attr/actionBarSize"
                android:layout_marginStart="5dp"
                android:background="@drawable/rounded_square_shape"
                android:elevation="4dp"
                android:scaleY="0.95"
                android:scaleX="0.95"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black_white_100"
                android:textAlignment="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/lightIndexTextView"
                app:layout_constraintRight_toRightOf="parent">
                <TextView
                    android:id="@+id/lightIndexLabelTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/light_uv_index_label"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <!-- PRECIPITATION CARD -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:background="@drawable/rounded_square_shape"
        android:elevation="1dp"
        android:scaleY="0.85"
        android:scaleX="0.85"
        app:layout_constraintWidth_percent="0.75"
        app:layout_constraintTop_toBottomOf="@+id/relativeHumidityLightCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/precipitationValueContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginStart="5dp"
            android:minWidth="?attr/actionBarSize"
            android:background="@drawable/rounded_square_shape"
            android:elevation="4dp"
            android:scaleY="0.95"
            android:scaleX="0.95"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">
            <TextView
                android:id="@+id/precipitationValueTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:textColor="@color/black_white_100"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/precipitationMeasurementUnitTextView"/>
            <TextView
                android:id="@+id/precipitationMeasurementUnitTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:paddingStart="2dp"
                android:paddingEnd="5dp"
                android:text="@string/precipitation_measurement_unit"
                android:textColor="@color/black_white_100"
                app:layout_constraintBottom_toBottomOf="@+id/precipitationValueTextView"
                app:layout_constraintLeft_toRightOf="@+id/precipitationValueTextView"
                app:layout_constraintRight_toRightOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/precipitationLabelTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textSize="18sp"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/precipitationValueContainer"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>